<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.ErrorRootFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_margin_large_xx"
        android:contentDescription="Logo"
        android:src="@drawable/ic_logo_root_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/error_sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ds_margin_medium_large"
        android:contentDescription="Error sign"
        android:src="@drawable/ic_root_error"
        app:layout_constraintBottom_toTopOf="@+id/title_root_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.36"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/title_root_error"
        style="@style/TextAppearance.DS.H1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ds_margin_medium"
        android:layout_marginBottom="@dimen/ds_margin_xsmall"
        android:gravity="center"
        android:text="@string/root_error_screen_title"
        app:layout_constraintBottom_toTopOf="@id/subtitle_root_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_sign"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/subtitle_root_error"
        style="@style/TextAppearance.DS.L2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ds_margin_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/root_error_screen_subtitle"
        android:textColor="?attr/ds_text_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_root_error" />

</androidx.constraintlayout.widget.ConstraintLayout>